      </Pane>
   </right>
   <top>
      <Pane prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="searchTextField" layoutX="191.0" layoutY="13.0" promptText="Search book here.." />
            <Button fx:id="searchButton" layoutX="352.0" layoutY="13.0" mnemonicParsing="false" onAction="#handleSearchButton" text="Search" />
         </children>
      </Pane>
